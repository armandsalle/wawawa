    "drizzle-valibot": "^0.2.0",
    "hono": "^4.5.5",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "valibot": "^0.37.0"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.8",
    "@types/bun": "latest",
    "drizzle-kit": "^0.23.2",
    "tsc": "^2.0.4",
    "typescript": "^5.5.4"
  }
}
