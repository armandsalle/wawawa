{
  "name": "@wawawa/api",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "scripts": {
    "dev": "tsup --watch --onSuccess 'node --env-file=.env.local dist/index.js'",
    "build": "tsup",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "bunx --bun drizzle-kit generate",
    "db:migrate": "bunx --bun drizzle-kit migrate"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@hono/valibot-validator": "^0.3.0",
    "@libsql/client": "^0.9.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "drizzle-valibot": "^0.2.0",
    "hono": "^4.5.5",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "valibot": "^0.37.0"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.8",
    "@types/bun": "latest",
    "@types/node": "^22.2.0",
    "drizzle-kit": "^0.23.2",
    "tsc": "^2.0.4",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  }
}
